{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "*.config.js"
  ]
}
